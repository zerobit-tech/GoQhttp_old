{{define "title"}}
Server detail
{{end}}

{{define "content"}}
 

<div class="row p-2">
    <div class="col">
      <div class="card ">
        <div class="card-header">
          <p class="h5">Server Details 
          
  
          </p>
         
        </div>
  
   
        <div class="card-body">
<table  class="table table-bordered table-striped">
    <tbody>
        <tr>
            <td>Server ID</td>
            <td>{{.Server.ID}}</td>
        </tr>

        <tr>
            <td>Server Name</td>
            <td>{{.Server.Name}}</td>
        </tr>

        <tr>
            <td>Server IP</td>
            <td>{{.Server.IP}}</td>
        </tr>
     
        <tr>
            <td>Server Port</td>
            <td>{{.Server.Port}}</td>
        </tr>

        <tr>
            <td>Server Name</td>
            <td>{{.Server.Ssl}}</td>
        </tr>

        <tr>
            <td>User Name</td>
            <td>{{.Server.UserName}}</td>
        </tr>

 

       <tr>
            <td>Max open Connections</td>
            <td>{{.Server.MaxOpenConns}}</td>
        </tr>

        <tr>
            <td>Max Idle Connections</td>
            <td>{{.Server.MaxIdleConns}}</td>
        </tr>

        <tr>
            <td>Connection max age</td>
            <td>{{.Server.ConnMaxLifetime}}</td>
        </tr>

        <tr>
            <td>Connection idle age</td>
            <td>{{.Server.ConnMaxIdleTime}}</td>
        </tr>
    </tbody>
</table>

<a class="btn btn-primary " href="/servers">Back to Server list</a>

 
</div>
</div>
</div>

 

</div>

<div class="row p-2">
    <div class="col">
      <div class="card ">
        <div class="card-header">
          <p class="h5">Endpoints 
            <a class="btn btn-ghost-info float-right" href="/sp/add">+Add</a>
  
          </p>
         
        </div>
  
   
        <div class="card-body">
  <table id="splist"    class="table   table-borderless table-responsive-sm table-striped    ">
    <thead class="thead-dark">
      <tr>
        <th>EndPoint name</th>
        <th>Method</th>
        <th>Name</th>
        <th>Lib</th>
        <th>Options</th>
      </tr>
    </thead>
    <tbody>
      {{if .StoredProcs}}
      {{range .StoredProcs}}
      <tr>
        <td>{{.EndPointName}}</td>
        <td>{{.HttpMethod}}</td>
        <td>{{.Name}}</td>
        <td>{{.Lib}}</td>
         <td nowrap>
          <a class="btn btn-ghost-info" href='/sp/{{.ID}}'>
          
            View</a>
  
          <a class="btn btn-ghost-info" 
          data-toggle="tooltip" data-placement="bottom" title="Edit" 
          href='/sp/update/{{.ID}}'>
            <svg class="c-icon mfe-2">
              <use xlink:href="/static/coreui/vendors/coreui/icons/svg/free.svg#cil-pencil"></use>
          </svg></a>
          <a class="btn btn-ghost-danger" 
          data-toggle="tooltip" data-placement="bottom" title="Delete" 
          href='/sp/delete/{{.ID}}'>
            <svg class="c-icon mfe-2">
              <use xlink:href="/static/coreui/vendors/coreui/icons/svg/free.svg#cil-trash"></use>
          </svg></a>
  
        </td>
  
      </tr>
      {{end}}
  
      {{else}}
       {{end}}
    </tbody>
  </table>
   
  </div>
  </div>
  </div>
  </div>
<div class="row p-2">
    <div class="col">
      <div class="card ">
        <div class="card-header">
          <p class="h5">Users <a class="btn btn-ghost-info float-right" href="/users/add">+Add</a></p>
        </div>
        <div class="card-body">
          <table id="rbackrolelist"
            class="table   table-borderless table-responsive-sm table-striped    ">
            <thead class="thead-dark">
  
            <tr>
                <th>Email</th>
                <th>Name</th>
                <th>Created</th>
                <th>Super User</th>
                <th>Staff</th>

                <th>Verified</th>
 
                <th>Options </th>

            </tr>
        </thead>
        <tbody>
            {{if .Users}}

            {{range .Users}}
            <tr>
                <td>{{.Email}}   </td>

                <td>{{.Name}} </td>
                <td>{{.Created }} </td>
                <td>{{.IsSuperUser | yesNo}} </td>
                <td>{{.IsStaff | yesNo}} </td>

                <td>{{.HasVerified | yesNo}} </td>
                 

                <td>

                    <a class="btn btn-ghost-info  " href='/users/edit/{{.ID}}'>   
                        <svg class="c-icon">
                        <use xlink:href="/static/coreui/vendors/coreui/icons/svg/free.svg#cil-pencil"></use>
                    </svg>
                  </a>
                    <a class="btn btn-danger" href='/users/delete/{{.ID}}'>Delete</a>
                     


                </td>

            </tr>
            {{end}}
            {{end}}
        </tbody>
    </table>

</div>
</div>
</div>
</div>
{{end}}


{{define "aftercontent"}}

